%h1 Listing metrics

%table.responsive
  %tr
    %th Measure
    %th Active
    %th
    %th
    %th

  - @metrics.each do |metric|
    %tr
      %td= link_to metric.measure, metric
      %td= metric.active
      %td.hide
        = link_to 'Show', metric
      %td.hide
        = link_to 'Edit', edit_metric_path(metric)
      %td.hide
        = link_to 'Destroy', metric, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Metric', new_metric_path, class: :submit_button
