%h1 Listing metrics

%table
  %tr
    %th Measure
    %th Active
    %th
    %th
    %th

  - @metrics.each do |metric|
    %tr
      %td= metric.measure
      %td= metric.active
      %td= link_to 'Show', metric if can? :show, metric
      %td= link_to 'Edit', edit_metric_path(metric) if can? :edit, metric
      %td= link_to 'Destroy', metric, :method => :delete, :data => { :confirm => 'Are you sure?' } if can? :destroy, metric 

%br

= link_to 'New Metric', new_metric_path, class: :submit_button
