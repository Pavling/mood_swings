%h1= t "devise.invitations.new.header"
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f|
  = devise_error_messages!
  %fieldset
    - resource.class.invite_key_fields.each do |field|
      .field
        = f.label field
        = f.text_field field
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :cohort_id, 'Cohort'
      = f.collection_select :cohort_id, @cohorts, :id, :name, prompt: 'Please choose'
    .field
      = f.submit t("devise.invitations.new.submit_button"), class: :submit_button
